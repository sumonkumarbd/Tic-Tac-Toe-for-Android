        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/bangers_regular</item>
    </style>



    <style name="navBtnStyle">
        <item name="android:layout_width">@dimen/_80dp</item>
        <item name="android:layout_height">@dimen/_80dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="elevation">@dimen/_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/bangers_regular</item>
