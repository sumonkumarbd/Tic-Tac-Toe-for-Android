<resources>
    <string name="app_name">Tic Tac Toe</string>
    <string name="statusTxt">"Status "</string>
    <string name="statusTxt2">"Text"</string>
    <string name="player1">"Player 1"</string>
    <string name="player2">" Player 2"</string>
    <string name="restartGame">"Restart Game"</string>


    <style name="textVStyles">
        <item name="android:textColor">@color/btnColor</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/bangers_regular</item>
    </style>

    <style name="statusStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_25sp</item>
