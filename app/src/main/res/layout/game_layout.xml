<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/robot_lottie"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/statusTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/questain"
        app:lottie_repeatMode="restart" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/happy_lottie"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/statusTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/happy"
        app:lottie_repeatMode="restart" />


    <TextView
        android:id="@+id/player1tv"
        style="@style/textVStyles"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/player1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1_score"
        style="@style/textVStyles"
        android:layout_marginStart="10dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/player1tv"
        app:layout_constraintStart_toEndOf="@+id/player1tv" />

    <TextView
        android:id="@+id/player2tv"
        style="@style/textVStyles"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:text="@string/player2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2_score"
        style="@style/textVStyles"
        android:layout_marginEnd="10dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/player2tv"
        app:layout_constraintEnd_toStartOf="@+id/player2tv" />


    <TextView
        android:id="@+id/statusTxt"
        style="@style/statusStyles"
        android:layout_marginBottom="20dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/statusTxt2"
        style="@style/statusStyles"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/statusTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toEndOf="@+id/statusTxt"
        app:layout_constraintTop_toTopOf="@+id/statusTxt" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:columnCount="3"
        android:padding="20dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            style="@style/btnStyle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            style="@style/btnStyle"

            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            style="@style/btnStyle"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            style="@style/btnStyle"

            />


    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restartGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.366" />

</androidx.constraintlayout.widget.ConstraintLayout>