<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".MainActivity">


    <TextView
        style="@style/textVStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/_50dp"
        android:textSize="@dimen/_40sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/oneVsOne_btn"
            style="@style/navBtnStyle"
            android:layout_width="@dimen/_140dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/line_shape_right_cut"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_20dp"
            android:text="Friends"
            android:textSize="@dimen/_16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/computer_btn"
            style="@style/navBtnStyle"
            android:layout_width="@dimen/_140dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/line_shape_left_cut"
            android:paddingStart="@dimen/_20dp"
            android:paddingEnd="@dimen/_10dp"
            android:text="computer"
            android:textSize="@dimen/_16sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>